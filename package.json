{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "wonder <gonzalezwonderly@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"nodemon ./dist/index.js\" \"tsc --watch\"  ",
    "start": "node ./dist/index.js",
    "build": "tsc",
    "heroku-postbuild": "npm run build",
    "type-check": "tsc --pretty --noEmit",
    "codegen": "graphql-codegen --config codegen.yml",
    "api-knex":"knex --knexfile ./src/database/knexfile.ts",
    "migrate:up": "knex --knexfile ./src/database/knexfile.ts migrate:latest ",
    "migrate:down": "knex --knexfile ./src/database/knexfile.ts migrate:rollback ",
    "seed:run": "knex --knexfile ./src/database/knexfile.ts seed:run ",
    "generate:types": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.2.0",
    "@types/express": "^4.17.4",
    "apollo-server": "^2.11.0",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.23.0",
    "concurrently": "^5.1.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.0.0",
    "graphql-tools": "^4.0.7",
    "jsonwebtoken": "^8.5.1",
    "jwks-rsa": "^1.12.2",
    "knex": "^0.20.13",
    "nodemon": "^2.0.2",
    "objection": "^2.1.3",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.13.2",
    "@graphql-codegen/fragment-matcher": "1.13.2",
    "@graphql-codegen/introspection": "1.13.2",
    "@graphql-codegen/typescript": "1.13.2",
    "@graphql-codegen/typescript-graphql-files-modules": "1.13.2",
    "@graphql-codegen/typescript-operations": "^1.13.2",
    "@graphql-codegen/typescript-react-apollo": "1.13.2",
    "@graphql-codegen/typescript-resolvers": "1.13.2",
    "@jagi/jest-transform-graphql": "^1.0.2",
    "@types/bcrypt": "^3.0.0",
    "@types/graphql": "^14.5.0",
    "@types/node": "^13.11.0",
    "@types/webpack": "^4.41.10",
    "apollo-server-testing": "^2.18.1",
    "awesome-typescript-loader": "^5.2.1",
    "casual": "^1.6.2",
    "dotenv-webpack": "^5.1.0",
    "graphql-tag": "^2.10.3",
    "jest": "^26.4.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql"
    }
  }
}
